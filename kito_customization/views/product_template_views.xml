<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="product_template_only_inherited_form_view_kito_14" model="ir.ui.view">
            <field name="name">product.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="warning_qty" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                    <field name="predecessor_id" options="{'no_create': True}" invisible="1"/>
                    <field name="successor_id" options="{'no_create': True}" invisible="1"/>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="product_product_inherited_form_view_kito" model="ir.ui.view">
            <field name="name">product.product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="warning_qty"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>