<odoo>
    <template id="report_saleorder_document_inherit_kito" inherit_id="sale.report_saleorder_document">
        <xpath expr="/t/t/div/div[1]" position="before">
            <div class="row justify-content-end mb16">
                <div class="col-4" name="right_box">
                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', doc.name, 600, 100)"
                         style="width:300px;height:50px;" alt="Barcode"/>
                </div>
            </div>
        </xpath>
    </template>

